{
  "manifest_version": 3,
  "name": "Take a Break",
  "version": "1.0.0",
  "description": "A friendly reminder to stop binge-watching and get some sleep. Your future self will thank you!",
  "permissions": [
    "storage",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "*://*.netflix.com/*",
    "*://*.primevideo.com/*",
    "*://amazon.com/gp/video/*",
    "*://*.disneyplus.com/*",
    "*://*.hulu.com/*",
    "*://*.hbomax.com/*",
    "*://*.max.com/*",
    "*://*.youtube.com/*",
    "*://*.peacocktv.com/*",
    "*://*.paramountplus.com/*",
    "*://*.crunchyroll.com/*",
    "*://tv.apple.com/*",
    "*://*.hotstar.com/*",
    "*://*.jiocinema.com/*",
    "*://*.sonyliv.com/*",
    "*://*.zee5.com/*",
    "*://*.voot.com/*",
    "*://*.mxplayer.in/*",
    "*://*.altbalaji.com/*",
    "*://*.erosnow.com/*",
    "*://*.sunnxt.com/*",
    "*://*.hoichoi.tv/*",
    "*://*.aha.video/*",
    "*://*.chaupal.tv/*",
    "*://*.shemaroome.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.netflix.com/*",
        "*://*.primevideo.com/*",
        "*://amazon.com/gp/video/*",
        "*://*.disneyplus.com/*",
        "*://*.hulu.com/*",
        "*://*.hbomax.com/*",
        "*://*.max.com/*",
        "*://*.youtube.com/*",
        "*://*.peacocktv.com/*",
        "*://*.paramountplus.com/*",
        "*://*.crunchyroll.com/*",
        "*://tv.apple.com/*",
        "*://*.hotstar.com/*",
        "*://*.jiocinema.com/*",
        "*://*.sonyliv.com/*",
        "*://*.zee5.com/*",
        "*://*.voot.com/*",
        "*://*.mxplayer.in/*",
        "*://*.altbalaji.com/*",
        "*://*.erosnow.com/*",
        "*://*.sunnxt.com/*",
        "*://*.hoichoi.tv/*",
        "*://*.aha.video/*",
        "*://*.chaupal.tv/*",
        "*://*.shemaroome.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles/overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
